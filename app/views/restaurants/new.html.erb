<h1>Create a new restaurant</h1>
<%= form_with model: @restaurant do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %>
  <%= f.label :category %>
  <%= f.select :category, Restaurant::CATEGORIES %>
  <%= f.submit %>
<% end %>
<p><%= link_to "back to list", "/restaurants" %></p>
